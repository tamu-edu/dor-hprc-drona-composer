<!DOCTYPE html>
<html>

<head>
  <title>TAMU DASHBOARD (<%= settings.cluster_name %>)</title>
  <meta charset="UTF-8">
  <link rel='icon' href='<%= url("/favicon.ico") %>' type='image/x-icon' />
  <link rel="stylesheet" type="text/css" href="<%= url("/bootstrap-4.4.1/css/bootstrap.min.css") %>">
  <link rel="stylesheet" type="text/css" href="<%= url("/DataTables/datatables.min.css") %>" />
  <link rel="stylesheet" type="text/css" href="<%= url("/custom/css/dashboard.css") %>" />
  <link rel="stylesheet" type="text/css" href="<%= url("/jquery-ui-1.12.1/jquery-ui.min.css") %>">

  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&display=swap" rel="stylesheet">
  
  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>

  <script>
  $( function() {
    $( "#datepicker" ).datepicker();
  } );
  </script>
</head>

<body>

  <header>
    <!-- Image and text -->
    <nav class="navbar navbar-dark" style="background-color: #500000; font-family: 'Open Sans'; font-weight: 700;">

      <a class="navbar-brand" href="<%= settings.home_page %>">
        <img src="<%= url("/images/HPRC-Identity-ExternalLeft-Dark.svg") %>" width="200"
          class="d-inline-block align-top" alt="">
      </a>
      <a class="navbar-brand mx-auto" href="<%= settings.dashboard_url %>">
        <span class="text-uppercase">TAMU DASHBOARD (<%= settings.cluster_name %>)</span>
      </a>
      <div class="nav-item pull-right">
        <button type="button" class="btn btn-dark navbar-button" class="nav-link" data-toggle="modal"
          data-target="#requestHelpModal">Create Help Ticket</button>
      </div>
      <div class="nav-item pull-right">
        <button type="button" class="btn btn-dark ml-2 navbar-button" class="nav-link" data-toggle="modal"
          data-target="#requestSoftwareModal">Request Software</button>
      </div>

      <%== erb :"_software_request_form" %>
      <%== erb :"_help_request_form" %>
    </nav>
  </header>
  <%# here we load some constants that are read from our config file (this is a hack) %>
  <script>
    document.dashboard_url = '<%= settings.dashboard_url %>';
    document.file_app_url = '<%= settings.file_app_url %>';
    document.file_editor_url = '<%= settings.file_editor_url %>';
    document.username = '<%= @username %>';
  </script>

  <div id="main-container" class="container" role="main">
    <% if @error %>
    <div class="alert alert-danger"><%= @error %></div>
    <% end %>

    <%== yield %>

    <div id="overlay" style="display:none;">
      <div class="spinner"></div>
      <br />
      Loading...
    </div>
  </div>

  <footer class="footer mt-2">
    <!-- just to add some padding and be a place holder for contents -->
  </footer>



  <script src="<%= url("/jquery-3.4.1/jquery-3.4.1.min.js") %>"></script>
  <script src="<%= url("/bootstrap-4.4.1/js/bootstrap.min.js") %>"></script>
  <!-- <link href="<%= url("bootstrap-4.4.1/css/bootstrap.min.css") %>" rel="stylesheet" id="bootstrap-css"> -->
  <script type="text/javascript" src="<%= url("/DataTables/datatables.min.js") %>"></script>
  <script src="<%= url("/jquery-ui-1.12.1/jquery-ui.min.js") %>"></script>

  <script type="text/javascript" src="<%= url("/chartjs-2.9.3/Chart.bundle.min.js") %>"></script>
  <script type="text/javascript" src="<%= url("/custom/js/cluster_utility.js") %>"></script>
  <script type="text/javascript" src="<%= url("/custom/js/quota.js") %>"></script>
  <script type="text/javascript" src="<%= url("/custom/js/job_management.js") %>"></script>
  <script type="text/javascript" src="<%= url("/custom/js/allocations.js") %>"></script>
  <script type="text/javascript" src="<%= url("/custom/js/requests.js") %>"></script>
  <script type="text/javascript" src="<%= url("/custom/js/job_composer.js") %>"></script>
  <script type="text/javascript" src="<%= url("/custom/js/quota_request.js") %>"></script>
</body>

</html>